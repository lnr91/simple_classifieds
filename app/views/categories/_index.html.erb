<table>


  <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to category.name, category ,class:'category'%>
        </td>

      </tr>
      <% category.subcategories.each do |subcategory| %>
          <tr>

            <td>--
              <%= link_to subcategory.name, subcategory,class:'subcategory' %>
            </td>

          </tr>
      <% end %>
  <% end %>
</table>

<br/>

